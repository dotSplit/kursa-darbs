@model Board.Web.Models.UserAuthModel

@{
    ViewBag.Title = "Authenticate";
}
<div class="row">
    <div class="hidden-xs col-sm-2 col-md-3">
        
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6 auth-form">
        <div class="panel">
            <div class="panel-heading">
                <div class="post-title">
                    <h4>Authentication</h4>
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#loginMenu">Login</a></li>
                        <li><a data-toggle="tab" href="#registerMenu">Register</a></li>
                    </ul>
                </div>
            </div>

            <div class="panel-body tab-content">
                @* Log In *@
                <div id="loginMenu" class="tab-pane fade in active">
                    @*@Html.Partial("LoginPartial")*@
                    @*@Html.EditorFor(x => x.loginModel, "~/Views/User/LoginPartial.cshtml")*@
                    @Html.Partial("LoginPartial", ViewData.Model.loginModel)
                </div>
                @* Register *@
                <div id="registerMenu" class="tab-pane fade">
                    @*@Html.Partial("RegisterPartial")*@
                    @*@Html.EditorFor(x => x.regModel, "~/Views/User/RegisterPartial.cshtml")*@
                    @Html.Partial("RegisterPartial", ViewData.Model.regModel)
                </div>
            </div>

        </div>
    </div>
</div>

